<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="SideNav">
            <aside>
                <h1>Quiz Time</h1>
                <ul>
                    <li><span class="nav_button">Start Quiz</span></li>    
                    <li><span class="nav_button">Home</span></li>    
                    <li><span class="nav_button">Profile</span></li>    
                    <li><span class="nav_button">Ranking</span></li>    
                    <li><span class="nav_button">Settings</span></li>    
                </ul>
            </aside>
            <nav>
                <input class="inputsearch" type="text" placeholder="Search..">
                <button class="start_quiz">Start Quiz</button>
                <div class="home_profile">   
                    <div class="profile_picture"></div>
                    <p>Prénom</p>
                </div>
            </nav>
        </div>
    </body>
</html>
